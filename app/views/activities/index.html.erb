<h1>Listing activities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Place</th>
      <th>User</th>
      <th>Visit date</th>
      <th>Evaluation</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.place_id %></td>
        <td><%= activity.user_id %></td>
        <td><%= activity.visit_date %></td>
        <td><%= activity.evaluation %></td>
        <td><%= activity.comment %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

